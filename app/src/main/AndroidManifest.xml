<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homearound.www.homearound">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HAApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CustomerNvDrawerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerJobDetailActivity"
            android:label="@string/title_activity_customer_job_detail"
            android:parentActivityName=".CustomerNvDrawerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.homearound.www.homearound.CustomerNvDrawerActivity" />
        </activity>
        <activity
            android:name=".CustomerJobTitleEditActivity"
            android:label="@string/title_activity_customer_job_title_edit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CustomerJobDetailEditActivity"
            android:label="@string/title_activity_customer_job_detail_edit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItem_service_loaded_c"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/colorDarkedGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_service_loaded_distance_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="distance"
                android:textSize="15sp"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_service_loaded_name_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingRight="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/txt_service_loaded_distance_c"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp"
                android:text="name"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <ImageView
                android:id="@+id/img_service_loaded_star1_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_loaded_star2_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_loaded_star1_c"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_loaded_star3_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_loaded_star2_c"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_loaded_star4_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_loaded_star3_c"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_loaded_star5_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_loaded_star4_c"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_service_loaded_rating_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_service_loaded_star1_c"
                android:textSize="15sp"
                android:text="rating"
                android:maxLines="1"
                android:minLines="1"/>

            <ImageView
                android:id="@+id/img_service_loaded_heart_c"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/heart"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_service_loaded_detail_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="detail"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"
            android:maxLines="2"
            android:minLines="1"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_merchant_posted_job_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homearound.www.homearound.MerchantPostedJobDetailActivity"
    tools:showIn="@layout/activity_merchant_posted_job_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/img_posted_job_detail_heart_m"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/heart"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_posted_job_detail_title_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/img_posted_job_detail_heart_m"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:text="Title"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_posted_by_label_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_posted_job_detail_title_m"
                android:text="Posted by:"
                android:textSize="15sp"
                android:textColor="@color/colorSecondaryText"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_posted_job_detail_name_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/txt_posted_by_label_m"
                android:layout_alignBaseline="@id/txt_posted_by_label_m"
                android:layout_toLeftOf="@id/img_posted_job_detail_heart_m"
                android:text="name"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryText"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/txt_posted_job_detail_time_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:textColor="@color/colorSecondaryText"
                android:text="Time"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_posted_job_detail_distance_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/txt_posted_job_detail_time_m"
                android:gravity="right"
                android:text="Distance"
                android:textSize="15sp"
                android:textColor="@color/colorSecondaryText"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_posted_job_detail_sendmsg_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorGreenBtn"
            android:textColor="@color/colorWhite"
            android:text="Send a Message"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@color/colorDivider"
            android:text="Time to Finish:"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/txt_posted_job_detail_timefinish_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="right"
            android:text="time to finish"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:minLines="1"
            android:maxLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@color/colorDivider"
            android:text="Job Details:"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/txt_posted_job_detail_detail_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="right"
            android:text="details"
            android:textSize="16sp"
            android:textColor="@color/colorSecondaryText"
            android:minLines="1"/>

    </LinearLayout>

</ScrollView>

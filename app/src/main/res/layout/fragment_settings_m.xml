<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    tools:context="com.homearound.www.homearound.FragmentSettingsM">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_settings_photo_merchant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorDivider"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/txt_settings_namelabel_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:text="Name"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_settings_name_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/txt_settings_namelabel_m"
                android:gravity="right"
                android:hint="Your name"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/txt_settings_postcodelabel_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:text="Postal Code"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_settings_postcode_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/txt_settings_postcodelabel_m"
                android:gravity="right"
                android:hint="Your postal code"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/txt_settings_phonelabel_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:text="Phone"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_settings_phone_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/txt_settings_phonelabel_m"
                android:gravity="right"
                android:hint="Your phone"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorDivider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/txt_settings_countrylabel_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:text="Country"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_settings_country_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/txt_settings_countrylabel_m"
                android:gravity="right"
                android:hint="Your country"
                android:textSize="16sp"
                android:textColor="@color/colorSecondaryText"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/colorDivider"
            android:text="Expertise"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/txt_settings_expertise_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="right"
            android:hint="Your expertise"
            android:textSize="16sp"
            android:textColor="@color/colorSecondaryText"
            android:minLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/colorDivider"
            android:text="Bio Details"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/txt_settings_bio_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:hint="Your bio details"
            android:textSize="16sp"
            android:textColor="@color/colorSecondaryText"
            android:minLines="1"/>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItem_service_profile_review_c"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_service_profile_review_star1_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_profile_review_star2_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_profile_review_star1_c"
                android:layout_centerVertical="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_profile_review_star3_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_profile_review_star2_c"
                android:layout_centerVertical="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_profile_review_star4_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_profile_review_star3_c"
                android:layout_centerVertical="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_service_profile_review_star5_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/img_service_profile_review_star4_c"
                android:layout_centerVertical="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_service_profile_review_time_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="time"
                android:textSize="15sp"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_service_profile_review_reviewer_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="reviewer"
            android:textSize="15sp"
            android:maxLines="1"
            android:minLines="1"/>

        <TextView
            android:id="@+id/txt_service_profile_review_comment_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="comments"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"
            android:minLines="1"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
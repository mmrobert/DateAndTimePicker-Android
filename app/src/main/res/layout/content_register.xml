<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homearound.www.homearound.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/homeicon"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/img_register_email"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icemail"
                android:scaleType="centerCrop"/>

            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/img_register_email"
                android:layout_centerVertical="true"
                android:hint="Email"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_register_password"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iclock"
                android:scaleType="centerCrop"/>

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/img_register_password"
                android:layout_centerVertical="true"
                android:hint="Password"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:inputType="textPassword"
                android:imeOptions="actionNext" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_register_password_confirm"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iclock"
                android:scaleType="centerCrop"/>

            <EditText
                android:id="@+id/et_register_password_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@id/img_register_password_confirm"
                android:layout_centerVertical="true"
                android:hint="Confirm Password"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:inputType="textPassword"
                android:imeOptions="actionDone" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorGreenBtn"
            android:textColor="@color/colorWhite"
            android:text="Register"/>

        <TextView
            android:id="@+id/txt_register_term1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:background="@null"
            android:text="By signing up, you are agreeing to"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txt_register_term2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:text="our"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_register_term"
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:layout_toRightOf="@id/txt_register_term2"
                android:layout_marginLeft="6dp"
                android:background="#00000000"
                android:text="Terms and Conditions."
                android:textColor="@color/colorRoyalBlue"
                android:textSize="12sp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

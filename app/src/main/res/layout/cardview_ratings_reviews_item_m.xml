<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItem_ratings_reviews_item_m"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/colorDarkedGrey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:id="@+id/rel_ratings_reviews_item_position_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/img_ratings_reviews_item_star1_m"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_ratings_reviews_item_star2_m"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_ratings_reviews_item_star1_m"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_ratings_reviews_item_star3_m"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_ratings_reviews_item_star2_m"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_ratings_reviews_item_star4_m"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_ratings_reviews_item_star3_m"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/img_ratings_reviews_item_star5_m"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_ratings_reviews_item_star4_m"
                android:src="@drawable/stargrey"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_ratings_reviews_item_value_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_ratings_reviews_item_star5_m"
                android:text="4.88"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:minLines="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txt_ratings_reviews_item_time_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/txt_ratings_reviews_item_value_m"
                android:gravity="right"
                android:text="time"
                android:textSize="14sp"
                android:minLines="1"
                android:maxLines="1"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_ratings_reviews_item_name_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rel_ratings_reviews_item_position_m"
            android:text="name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:minLines="1"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txt_ratings_reviews_item_content_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/txt_ratings_reviews_item_name_m"
            android:text="content"
            android:textSize="12sp"
            android:minLines="1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItem_MyServices_no_rating_C"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/colorDarkedGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/img_my_service_delete_cross_no_rating_c"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/deletecross"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txt_my_service_distance_no_rating_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="distance"
                android:textSize="14sp"
                android:maxLines="1"
                android:minLines="1"/>

            <TextView
                android:id="@+id/txt_my_service_name_no_rating_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="8dp"
                android:layout_toRightOf="@id/img_my_service_delete_cross_no_rating_c"
                android:layout_toLeftOf="@id/txt_my_service_distance_no_rating_c"
                android:text="name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:maxLines="1"
                android:minLines="1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/txt_my_service_rating_no_rating_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="No rating yet."
                android:textSize="12sp"
                android:maxLines="1"
                android:minLines="1"/>

            <ImageView
                android:id="@+id/img_my_service_heart_no_rating_c"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/heartfull"
                android:clickable="false"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_my_service_detail_no_rating_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="detail"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp"
            android:maxLines="2"
            android:minLines="1"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homearound.www.homearound.CustomerJobCreationActivity"
    tools:showIn="@layout/activity_customer_job_creation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorDivider"/>

        <TextView
            android:id="@+id/job_creation_category_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:text="category"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryText"
            android:maxLines="1"
            android:minLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDivider"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Job Title"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/job_creation_title_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="end"
            android:hint="Your job title"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:minLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/colorDivider"
            android:text="Time to Finish"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/job_creation_timefinish_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="end"
            android:hint="Choose time to finish"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:minLines="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/colorDivider"
            android:text="Job Detail"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:minLines="1"/>

        <TextView
            android:id="@+id/job_creation_detail_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="end"
            android:hint="Your job detail"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:minLines="1"/>

    </LinearLayout>

</ScrollView>
